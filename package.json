{
  "name": "pwc-mindmap-pro",
  "version": "4.0.0",
  "description": "Professional Mindmap Editor for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --mac",
    "test": "jest"
  },
  "keywords": [
    "mindmap",
    "productivity",
    "macos",
    "pwc"
  ],
  "author": "Gonzalo Riederer",
  "license": "MIT",
  "devDependencies": {
    "@electron/packager": "^18.1.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "lucide": "^0.545.0",
    "sortablejs": "^1.15.6"
  },
  "build": {
    "appId": "com.pwc.mindmap",
    "productName": "PWC Mindmap Pro",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
